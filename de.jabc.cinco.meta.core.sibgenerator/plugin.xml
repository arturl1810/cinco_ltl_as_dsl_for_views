<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.jabc.cinco.meta.core.sibgenerator.commands.category"
            name="SIB Generation">
      </category>
      <command
            categoryId="de.jabc.cinco.meta.core.sibgenerator.commands.category"
            id="de.jabc.cinco.meta.core.sibgenerator.commands.generateCincoSIBsCommand"
            name="Generate Cinco SIBs">
      </command>
      <command
            categoryId="de.jabc.cinco.meta.core.sibgenerator.commands.category"
            id="de.jabc.cinco.meta.core.sibgenerator.commands.startJABC"
            name="Start jABC">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.jabc.cinco.meta.core.sibgenerator.handlers.CincoSIBGenerationHandler"
            commandId="de.jabc.cinco.meta.core.sibgenerator.commands.generateCincoSIBsCommand">
      </handler>
      <handler
            class="de.jabc.cinco.meta.core.sibgenerator.handlers.StartJABCHandler"
            commandId="de.jabc.cinco.meta.core.sibgenerator.commands.startJABC">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="de.jabc.cinco.meta.core.sibgenerator.commands.generateCincoSIBsCommand"
               disabledIcon="platform:/plugin/de.jabc.cinco.meta.core.ui/16-deact.png"
               icon="platform:/plugin/de.jabc.cinco.meta.core.ui/16.png"
               label="Generate Cinco SIBs"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.ecore">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="de.jabc.cinco.meta.core.sibgenerator.commands.startJABC"
               disabledIcon="platform:/plugin/de.jabc.cinco.meta.core.ui/16-deact.png"
               icon="platform:/plugin/de.jabc.cinco.meta.core.ui/16.png"
               label="Start jABC"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
