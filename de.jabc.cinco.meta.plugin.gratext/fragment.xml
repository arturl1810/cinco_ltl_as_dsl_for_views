               id="de.jabc.cinco.meta.plugin.gratext.build.buildGratext"
               class="de.jabc.cinco.meta.plugin.gratext.build.GratextBuildAction"
               icon="platform:/plugin/de.jabc.cinco.meta.plugin.gratext/gt_icon_16.png"
