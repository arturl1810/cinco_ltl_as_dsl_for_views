      </objectContribution>
      <objectContribution
            id="de.jabc.cinco.meta.plugin.gratext.menu.gratextbuild.cpd"
            objectClass="org.eclipse.core.resources.IFile"
            adaptable="true"
            nameFilter="*.cpd">
