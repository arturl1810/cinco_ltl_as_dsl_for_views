<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.jabc.cinco.meta.core.ge.generator.action.Generate"
            description="Generates graphiti editor from meta graph language model (.mgl)"
            id="de.jabc.cinco.meta.core.ge.generator.generateeditorcommand"
            name="Generate Graphiti Editor">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="GenerateEditor"
            commandId="de.jabc.cinco.meta.core.ge.generator.graphitieditorgenerator">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="de.jabc.cinco.meta.core.ge.generator.generateeditorcommand"
               label="Generate Graphiti Editor"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <test
                              property="org.eclipse.core.resources.name"
                              value="*.mgl">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

</plugin>
